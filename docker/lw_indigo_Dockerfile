FROM osrf/ros:indigo-desktop-full

MAINTAINER Eiji Uchibe <uchibe@atr.jp>

############################################
# ROS Indigo
#   Turtlebot
#   http://answers.ros.org/question/246015/installing-utrtlebot-on-ros-kinetic/
############################################
RUN apt-get update && apt-get install -y \
      ros-indigo-librealsense ros-indigo-realsense-camera \
      ros-indigo-turtlebot ros-indigo-turtlebot-gazebo \
      python-rosinstall python-rosinstall-generator \
      python-wstool \
      build-essential git \
    && apt-get clean && rm -rf /var/cache/apt/archives/* /var/lib/apt/lists/*

RUN echo "source /opt/ros/indigo/setup.bash" >> ~/.bashrc
ENV BASH_ENV ~/.bashrc

